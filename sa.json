{
   "$schema": "http://json-schema.org/draft-07/schema",
   "title": "GA4GH-SA-Definitions",
   "type": "object",
   "definitions": {
      "SequenceFeature":{
         "properties":{
            "id":{
               "type":"string"
            },
            "location":{
               "$ref":"https://w3id.org/ga4gh/schema/vrs/2.x/json/SequenceLocation" #may not resolve just yet
            },
            "type":{ 
               "type":"string" #http://purl.obolibrary.org/obo/SO_0000147 rdfs:label"exon"
               https://w3id.org/ga4gh/schema/gks-common/1.x/json/Coding
            }
         },
         "required": [
            "id",
            "location",
            "seqOntologyRef"
         ],
         "oneOf": [
            {
               "$ref": "#/definitions/Gene"
            },
            {
               "$ref": "#/definitions/Transcript"
            },
            {
               "$ref": "#/definitions/TranscriptRegion"
            } 
         ]
      },
      "Gene":{
         "properties":{
            "transcripts":{
               "type":"array",
               "items": {
                  "oneOf": [
                     {
                        "$ref": "#/definitions/Transcript"
                     }
                  ]
               }
            },
            "strand":{ #is this the right place for strand? What other features need strand? Relevance to VRS adjacency modeling?
               "type":"string",
               "enum":[
                  "+",
                  "-"
               ]
            },
            "referenceGenome":{
               "type":"string"
            }
         },
         "required": [
            "strand"
         ],
         "additionalProperties": true
      },
      "Transcript":{
         "properties":{
            "coding":{
               "type":"boolean"
            },
            "regions":{
               "type":"array",
               "items":{
                  "oneOf": [
                     {
                        "$ref": "#/definitions/TranscriptRegion"
                     }
                  ]
               }
            }
         },
         "additionalProperties": true
      },
      "TranscriptRegion":{
         "properties":{
            "type":{
               "type":"string"
            }
         }
      }
   }
}
